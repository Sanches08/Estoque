<%# Views/movimentacao/lista.ejs %>
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Histórico de Movimentações | Bloom Beauty</title>

    <link rel="stylesheet" href="/CSS/style.css">
    <link rel="icon" href="/IMG/logo.png">
</head>

<body>

    <%- include('../includes/header.ejs', { titulo: 'Movimentações' }) %>

    <main class="conteudo-geral">

        <!-- TÍTULO como no seu print -->
        <h1 class="titulo-geral">Histórico de movimentações</h1>

        <!-- TABELA igual ao modelo do print -->
        <div class="tabela-wrapper">
            <table class="tabela-movimentacoes">
                <thead>
                    <tr>
                        <th>ID Mov.</th>
                        <th>Produto</th>
                        <th>Tipo</th>
                        <th>Qtd.</th>
                        <th>Data</th>
                        <th>Descrição</th>
                        <th>Usuário</th>
                    </tr>
                </thead>

                <tbody>
                    <% if (movimentacoes && movimentacoes.length > 0) { %>

                        <% movimentacoes.forEach(mov => { %>
                            <tr>
                                <td><%= mov.id_movimento || mov.id_movimento %></td>
                                <td><%= mov.id_produto %></td>

                                <td><%= mov.tipo_movimento %></td>

                                <td><%= mov.quantidade || mov.quant_movimentada %></td>

                                <td>
                                    <% const dataFormatada = new Date(mov.data_hora || mov.dat).toLocaleString("pt-BR", { dateStyle: "short" }); %>
                                    <%= dataFormatada %>
                                </td>

                                <td><%= mov.motivo || mov.descricao || "—" %></td>
                                <td><%= mov.nome_usuario %></td>
                            </tr>
                        <% }) %>

                    <% } else { %>
                        <tr>
                            <td colspan="7" style="text-align:center; padding: 20px;">
                                Nenhuma movimentação registrada.
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>

    </main>

    <%- include('../includes/footer.ejs') %>
</body>
</html>
