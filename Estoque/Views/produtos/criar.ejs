<%- include('../Includes/header', { titulo: 'Criar Novo Produto' }) %>
    
    <div class="dashboard-container">
        
        <form action="/produtos/criar" method="POST" class="form-container"> 
            <h2 class="criacao-usuario-titulo">Adicionar Produto</h2>
            
            <div class="form-group">
                <label for="nome_produto">Nome do Produto:</label>
                <input type="text" id="nome_produto" name="nome_produto" required>
            </div>

            <div class="form-group">
                <label for="descricao">Descrição:</label>
                <textarea id="descricao" name="descricao"></textarea>
            </div>

            <div class="form-group">
                <label for="quant_estoque">Quantidade em Estoque:</label>
                <input type="number" id="quant_estoque" name="quant_estoque" required min="0">
            </div>

            <div class="form-group">
                <label for="estoque_minimo">Estoque Mínimo:</label>
                <input type="number" id="estoque_minimo" name="estoque_minimo" required min="0">
            </div>

            <div class="form-group">
                <label for="valor">Valor (R$):</label>
                <input type="number" id="valor" name="valor" required step="0.01" min="0">
            </div>
            
            <div class="form-group">
                <label for="id_categoria">Categoria:</label>
                 <select id="id_categoria" name="id_categoria" class="select">
                    <% 
                
                    for (let categoria of categorias) { 
                %>
                        <option value="<%= categoria.id_categoria %>"><%= categoria.nome_categoria %></option>
                <% 
                    } 
                
                %>
        </select>
            </div>
            
            <div class="form-group checkbox-group">
                <input type="checkbox" id="ativo" name="ativo" checked>
                <label for="ativo">Produto Ativo</label>
            </div>

            <div class="form-actions">
                <button type="submit" class="submit-button">Cadastrar Produto</button>
                <a href="/produtos" class="cancel-button">Cancelar</a>
            </div>
        </form>
        
    </div>

    <%- include('../Includes/footer') %>