<%- include('../includes/header.ejs', { titulo: 'Adicionar Categoria' }) %>

<main class="categoria-form-main">

<div class="categoria-form-container">

<h2 class="categoria-form-titulo">Adicionar Categoria</h2>

<% if (typeof mensagem !== 'undefined' && mensagem) { %>
    <p class="categoria-form-mensagem"><%= mensagem %></p>
<% } %>

<form action="/categorias/novo" method="POST" class="categoria-form">

    <div class="categoria-form-campo">
        <label for="nome" class="categoria-form-label">
            Nome da Categoria
        </label>
        <input type="text"
            id="nome"
            name="nome_categoria"
            value="<%= typeof categoria !== 'undefined' ? categoria.nome : '' %>"
            required
            class="categoria-form-input" />
    </div>

    <div class="categoria-form-botoes">
        <a href="/categorias" class="categoria-form-btn categoria-form-btn-cancelar">Cancelar</a>
        <button type="submit" class="categoria-form-btn categoria-form-btn-submit">Criar Categoria</button>
    </div>

</form>

</div>
</main>

<%- include('../includes/footer.ejs') %>