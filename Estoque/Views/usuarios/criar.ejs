<%- include('../includes/header.ejs', { titulo: 'Adicionar Usuário' }) %>

<main class="criacao-usuario-main">

<div class="criacao-usuario-container">

<h2 class="criacao-usuario-titulo">Adicionar Usuário</h2>

<% if (typeof mensagem !== 'undefined' && mensagem) { %>
    <p class="criacao-usuario-mensagem"><%= mensagem %></p>
<% } %>

<form action="/usuarios/novo" method="POST" class="criacao-usuario-form">

    <div class="criacao-usuario-campo">
        <label for="nome" class="criacao-usuario-label">
            Nome
        </label>
        <input type="text"
            id="nome"
            name="nome"
            value="<%= typeof usuario !== 'undefined' ? usuario.nome : '' %>"
            required
            class="criacao-usuario-input" />
    </div>

    <div class="criacao-usuario-campo">
        <label for="usuario" class="criacao-usuario-label">
            Usuário (Login)
        </label>
        <input type="text"
            id="usuario"
            name="usuario"
            value="<%= typeof usuario !== 'undefined' ? usuario.usuario : '' %>"
            required
            class="criacao-usuario-input" />
    </div>

    <div class="criacao-usuario-campo">
        <label for="senha" class="criacao-usuario-label">
            Senha
        </label>
        <input type="password"
            id="senha"
            name="senha"
            required
            class="criacao-usuario-input" />
    </div>

    <div class="criacao-usuario-campo criacao-usuario-checkbox-group">
        <input type="checkbox"
            id="ativo" 
            name="ativo"
            value="true"
            <%= (typeof usuario === 'undefined' || usuario.ativo !== false) ? "checked" : "" %> 
            class="criacao-usuario-checkbox" />
        <label for="ativo" class="criacao-usuario-label criacao-usuario-label-inline">
            Ativo?
        </label>
    </div>

    <div class="criacao-usuario-botoes">
        <a href="/usuarios" class="criacao-usuario-btn criacao-usuario-btn-cancelar">Cancelar</a>
        <button type="submit" class="criacao-usuario-btn criacao-usuario-btn-submit">Criar</button>
    </div>

</form>

</div>
</main>

<%- include('../includes/footer.ejs') %>