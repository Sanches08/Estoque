<%- include('../includes/header.ejs', { titulo: 'Novo Usuário' }) %>

<main
>

  <div class="form-card">

    <h2>Cadastrar Novo Usuário</h2>

    <% if (typeof mensagem !== 'undefined' && mensagem) { %>
      <p><%= mensagem %></p>
    <% } %>

    <form action="/usuarios/novo" method="POST" class="flex flex-col gap-4">

      <!-- Nome do Usuário -->
      <div>
        <label for="nome_usuario">
          Nome do Usuário
        </label>
        <input type="text"
               id="nome_usuario"
               name="nome_usuario"
               required
               class="input" />
      </div>

      <!-- Email -->
      <div>
        <label for="email" >
          E-mail
        </label>
        <input type="email"
               id="email"
               name="email"
               required
               class="input" />
      </div>

      <!-- Senha -->
      <div>
        <label for="senha">
          Senha
        </label>
        <input type="password"
               id="senha"
               name="senha"
               required
               class="input" />
      </div>

      <!-- Botões -->
      <div class="form-actions">
        <a href="/usuarios">Cancelar</a>
        <button type="submit">Salvar</button>
      </div>

    </form>

  </div>
</main>

<%- include('../includes/footer.ejs') %>
